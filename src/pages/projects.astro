---
import ProjectTablet from '../components/ProjectTablet';
import Layout from '../layouts/Layout.astro';
import projects from '../lib/projects_data.json';
---

<Layout title='Projects'>
	<main class='bg-transparent w-full sm:w-[80%] h-screen p-2'>
		<div
			class='bg-white bg-opacity-30 w-[90%] m-auto pt-8 [&>*]:mt-8 last:mb-8 h-full overflow-y-scroll flex flex-col justify-evenly items-center rounded-xl border-white shadow-md shadow-blue-50 ring-2 ring-offset-4 ring-offset-slate-100 bg-[linear-gradient(circle,rgba(1,156,213,0.8128501400560224)_30%,rgba(1,169,184,0.695203081232493)_90%)]'>
			<h1 class='text-4xl text-end text-black'>Projects</h1>
			<p class=''>This is what I have been up to.</p>
			<div class='flex flex-col justify-start sm:justify-evenly items-center'>
				{projects.map((project, index) => <ProjectTablet client:load project={project} zoomOutDirection={index % 2 === 0 ? 'right' : 'left'} />)}
			</div>
		</div>
	</main>
</Layout>
