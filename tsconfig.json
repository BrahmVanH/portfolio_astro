{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"../components/*": ["src/components/*"],
			"@styles/*": ["src/styles/*"],
			"@layouts/*": ["src/layouts/*"],
			"@types/*": ["src/types.d.ts"]
		},
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"allowJs": true,
		"typeRoots": [
			"./types.d.ts",
      "node_modules/@types"
    ]
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx", "src/**/*.astro"]
}
